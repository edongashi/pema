{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths":{
      "@pema/*": ["packages/*"]
    },
    "lib": [
      "es6"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "**/node_modules",
    "**/*.spec.ts"
  ]
}
