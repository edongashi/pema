{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@pema/*": [
        "packages/*"
      ]
    },
    "removeComments": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "**/node_modules",
    "**/*.spec.ts"
  ]
}
